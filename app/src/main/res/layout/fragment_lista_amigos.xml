<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragmentListaAmigos"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ListaAmigosFragment"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/tituloFragmentAmigos"
            android:layout_width="136dp"
            android:layout_height="28dp"
            android:text="@string/titulo_seccion_amigos"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.022" />


        <TextView
            android:id="@+id/tituloListaGrupos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/titulo_grupos_de_amigos"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.065"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tituloFragmentAmigos"
            app:layout_constraintVertical_bias="0.046" />

        <Button
            android:id="@+id/btnNuevoGrupoAmigos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/nuevo_grupo_amigos"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.84"
            app:layout_constraintStart_toEndOf="@+id/tituloListaGrupos"
            app:layout_constraintTop_toBottomOf="@+id/tituloFragmentAmigos"
            app:layout_constraintVertical_bias="0.031" />

        <LinearLayout
            android:id="@+id/msgNoGroups"
            android:layout_width="match_parent"
            android:layout_height="253dp"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnNuevoGrupoAmigos"
            app:layout_constraintVertical_bias="0.0">

            <ImageView
                android:id="@+id/imgNoGroups"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/amigos_icon" />

            <TextView
                android:id="@+id/txtNoGroups"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:text="@string/no_groups_msg"
                android:textAlignment="center"
                android:textSize="17sp" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerListaGruposAmigos"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tituloListaGrupos"
            app:layout_constraintVertical_bias="0.028" />


        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_margin="10dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recyclerListaGruposAmigos"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/tituloListaAmigos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/titulo_lista_de_amigos"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider"
            app:layout_constraintVertical_bias="0.042" />

        <Button
            android:id="@+id/btnGestionAmigos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/green"
            android:text="@string/gestionar_amigos"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/tituloListaAmigos"
            app:layout_constraintTop_toBottomOf="@+id/divider"
            app:layout_constraintVertical_bias="0.022" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerListaAmigos"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnGestionAmigos"
            app:layout_constraintVertical_bias="0.7"
            app:layout_constraintHorizontal_bias="0"/>

        <LinearLayout
            android:id="@+id/msgNoFriends"
            android:layout_width="match_parent"
            android:layout_height="275dp"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnGestionAmigos">

            <ImageView
                android:id="@+id/imgNoFriends"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/search_friends" />

            <TextView
                android:id="@+id/txtNoFriends"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:text="@string/no_friends_msg"
                android:textAlignment="center"
                android:textSize="17sp" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>