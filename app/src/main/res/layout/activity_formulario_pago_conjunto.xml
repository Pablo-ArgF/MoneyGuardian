<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FormularioPagoConjuntoActivity">

    <TextView
        android:id="@+id/textViewNuevoPagoConjunto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/NuevoPagoConjunto"
        android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.08"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.022" />

    <TextView
        android:id="@+id/textViewNuevoNombrePagoConjunto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nombre"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.044"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewNuevoPagoConjunto"
        app:layout_constraintVertical_bias="0.055" />

    <EditText
        android:id="@+id/editTextNombrePagoConjunto"
        android:layout_width="254dp"
        android:layout_height="57dp"
        android:ems="10"
        android:hint="@string/NombrePagoConjunto"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.079"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewNuevoNombrePagoConjunto"
        app:layout_constraintVertical_bias="0.042" />

    <TextView
        android:id="@+id/textViewFotoNuevoPagoConjunto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/IconoPagoConjunto"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.049"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextNombrePagoConjunto"
        app:layout_constraintVertical_bias="0.045" />

    <ImageView
        android:id="@+id/imagePreviewNuevoPagoConjunto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.034"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewFotoNuevoPagoConjunto"
        app:layout_constraintVertical_bias="0.019"
        app:srcCompat="@android:drawable/ic_menu_gallery"
        android:adjustViewBounds="true"
        android:maxWidth="42dp"
        android:maxHeight="42dp"
        android:scaleType="fitCenter" />

    <Button
        android:id="@+id/buttonSeleccionarImagenNuevoPagoConjunto"
        android:layout_width="126dp"
        android:layout_height="37dp"
        android:text="@string/Seleccionarr"
        android:textAppearance="@android:style/TextAppearance.Small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.045"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagePreviewNuevoPagoConjunto"
        app:layout_constraintVertical_bias="0.031" />

    <TextView
        android:id="@+id/textViewParticipantes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/UsuariosNuevoPagoConjunto"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.03"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonSeleccionarImagenNuevoPagoConjunto"
        app:layout_constraintVertical_bias="0.097" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerUsuariosNuevoPagoConjunto"
        android:layout_width="140dp"
        android:layout_height="196dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.036"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewParticipantes"
        app:layout_constraintVertical_bias="0.065" />

    <Button
        android:id="@+id/buttonAñadirUsuarioNuevoPagoConjunto"
        android:layout_width="92dp"
        android:layout_height="43dp"
        android:text="@string/Añadir"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.292"
        app:layout_constraintStart_toEndOf="@+id/textViewParticipantes"
        app:layout_constraintTop_toBottomOf="@+id/buttonSeleccionarImagenNuevoPagoConjunto"
        app:layout_constraintVertical_bias="0.104" />

    <Button
        android:id="@+id/buttonCrearNuevoPagoConjunto"
        android:layout_width="121dp"
        android:layout_height="52dp"
        android:text="@string/Crear"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.944"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recyclerUsuariosNuevoPagoConjunto"
        app:layout_constraintVertical_bias="0.789" />
</androidx.constraintlayout.widget.ConstraintLayout>