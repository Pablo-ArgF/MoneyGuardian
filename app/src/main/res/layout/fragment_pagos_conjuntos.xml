<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragmentPagosConjuntos"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.PagosConjuntosFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textNombrePagoConjunto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nombrePagoConjunto"
            android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.065"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.035" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerPagosConjuntos"
            android:layout_width="369dp"
            android:layout_height="630dp"
            android:layout_marginTop="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.38"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textNombrePagoConjunto"
            app:layout_constraintVertical_bias="0.257" />

        <Button
            android:id="@+id/btnNewPagoConjunto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/AÃ±adirPagoConjunto"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/recyclerPagosConjuntos"
            app:layout_constraintStart_toStartOf="@+id/recyclerPagosConjuntos"
            app:layout_constraintTop_toTopOf="@+id/recyclerPagosConjuntos"
            app:layout_constraintVertical_bias="0.922" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>