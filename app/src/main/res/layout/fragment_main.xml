<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragmentMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileButton"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            app:civ_border_color="@color/blue"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/txtWelcome"
            android:layout_width="246dp"
            android:layout_height="52dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="19dp"
            android:layout_marginEnd="28dp"
            android:layout_toStartOf="@+id/profileButton"
            android:fontFamily="@font/roboto_condensed_regular"
            android:text="@string/welcome_msg"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="297dp"
            android:layout_above="@+id/tipsLayout"
            android:layout_below="@+id/txtWelcome"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="25dp" />

        <LinearLayout
            android:id="@+id/tipsLayout"
            android:layout_width="wrap_content"
            android:layout_height="130dp"
            android:layout_above="@+id/btnIngreso"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded_edge"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="210dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="15dp">


                <TextView
                    android:id="@+id/txtTitleTips"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/title_tips"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtTipsBody"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/body_tips"
                    android:textColor="@color/black" />

            </LinearLayout>

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="123dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/tips_icon" />
        </LinearLayout>

        <Button
            android:id="@+id/btnIngreso"
            android:layout_width="180dp"
            android:layout_height="65dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/green"
            android:text="@string/registrar_ingreso"
            android:textColor="@color/white"
            tools:visibility="visible" />

        <Button
            android:id="@+id/btnGasto"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:layout_toEndOf="@+id/btnIngreso"
            android:backgroundTint="@color/red"
            android:text="@string/registrar_gasto"
            android:textColor="@color/white" />


    </RelativeLayout>
</FrameLayout>