<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragmentMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/txtWelcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@+id/profileButton"
            android:fontFamily="@font/roboto_condensed_regular"
            android:text="@string/welcome_msg"
            android:textSize="20sp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileButton"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            app:civ_border_color="@color/blue"
            app:civ_border_width="2dp" />

        <RelativeLayout
            android:id="@+id/chartLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tipsLayout"
            android:layout_below="@+id/txtWelcome"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:visibility="visible">

            <!--<com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/nav_graphs"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:menu="@menu/graph_types_menu"
                >

            </com.google.android.material.bottomnavigation.BottomNavigationView>-->
            <LinearLayout
                android:id="@+id/menu_graphs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="0dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_lineChart"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="@string/title_linear_graph" />

                <Button
                    android:id="@+id/btn_pieChart"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="@string/title_pie_graph" />
            </LinearLayout>

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/chartFragmentContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/menu_filters"
                android:layout_below="@+id/menu_graphs"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="0dp" />

            <LinearLayout
                android:id="@+id/menu_filters"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="0dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/filter_1month"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:text="@string/filter_1month"
                    android:textAlignment="center"
                    android:textSize="17dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/filter_3month"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:text="@string/filter_3month"
                    android:textAlignment="center"
                    android:textSize="17dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/filter_1year"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:text="@string/filter_1year"
                    android:textAlignment="center"
                    android:textSize="17dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/filter_all"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:text="@string/filter_all"
                    android:textAlignment="center"
                    android:textSize="17dp"
                    android:textStyle="bold" />
            </LinearLayout>
        </RelativeLayout>


        <LinearLayout
            android:id="@+id/tipsLayout"
            android:layout_width="wrap_content"
            android:layout_height="99dp"
            android:layout_above="@+id/linearLayout2"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/rounded_edge"
            android:orientation="horizontal"
            android:visibility="visible">


            <LinearLayout
                android:layout_width="210dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="15dp">


                <TextView
                    android:id="@+id/txtTitleTips"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/title_tips"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtTipsBody"
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:text="@string/body_tips"
                    android:textColor="@color/black"
                    android:textSize="11dp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="123dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/tips_icon" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="wrap_content"
            android:layout_height="54dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            android:visibility="visible">

            <Button
                android:id="@+id/btnGasto"
                android:layout_width="170dp"
                android:layout_height="57dp"
                android:layout_marginBottom="36dp"
                android:backgroundTint="@color/red"
                android:text="@string/registrar_gasto"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btnIngreso"
                android:layout_width="170dp"
                android:layout_height="57dp"
                android:backgroundTint="@color/green"
                android:text="@string/registrar_ingreso"
                android:textColor="@color/white" />
        </LinearLayout>


    </RelativeLayout>
</FrameLayout>