<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">

    <LinearLayout
        android:id="@+id/mainRelativeItemsForm"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FormItemsListaPago"
        android:orientation="vertical"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        >

        <TextView
            android:id="@+id/formItemPagoNameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/formListaPagosName"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/formItemPagoNameTextField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="@string/formListaPagosName"
            android:inputType="text" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/formListaPagosCantidadTotal"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editTextTotalMoneyItemPago"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="@string/formListaPagosHintCantidadTotal"
            android:inputType="numberDecimal" />

        <TextView
            android:id="@+id/TVPagador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/TVPagador"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/spinnerWhoPays"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"/>

        <CheckBox
            android:id="@+id/checkBoxChangeMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="@string/changeMoneyPerPerson" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recicledViewUsersToSelect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            />

        <Button
            android:id="@+id/btnCreteItemPago"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="@string/acceptBtn" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>